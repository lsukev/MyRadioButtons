<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lsukev.myradiobuttons.MainActivity"
    android:background="#ffdd6039">

    <TextView
        android:id="@+id/title"
        android:text="@string/title_name"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/radioGroupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/radioButtonYes"
            android:text="@string/positive_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radioButtonNo"
            android:text="@string/negative_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radioButtonMaybe"
            android:text="@string/maybe_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:id="@+id/showChoiceBtn"
        android:layout_below="@id/radioGroupId"
        android:layout_centerHorizontal="true"
        android:text="@string/button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/showTextView"
        android:text="hello"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/showChoiceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
